{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build",
  "installCommand": "npm ci",
  "framework": "nextjs",
  "git": {
    "deploymentEnabled": {
      "main": true,
      "staging": true
    }
  },
  "crons": [
    {
      "path": "/api/cron/daily",
      "schedule": "0 10 * * *"
    }
  ]
}
