{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build",
  "installCommand": "npm ci",
  "framework": "nextjs",
  "git": {
    "deploymentEnabled": {
      "main": true,
      "staging": true
    }
  },
  "crons": [
    {
      "path": "/api/cron/auto-conclude",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/cron/expire-invitations",
      "schedule": "0 11 * * *"
    },
    {
      "path": "/api/cron/nurture",
      "schedule": "0 12 * * *"
    }
  ]
}
