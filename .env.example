# ===========================================
# PeerLens Environment Variables
# ===========================================
# Copy this file to .env.local for local development
# In Vercel, set these in the Environment Variables section
# for each environment (Production, Preview, Development)

# ===========================================
# Supabase Configuration
# ===========================================
# Get these from your Supabase project settings > API
#
# IMPORTANT: Use separate Supabase projects for staging vs production
# to keep data isolated and prevent accidents.

# Public URL (safe to expose to client)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Server-side only (never expose to client)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===========================================
# Resend Email Configuration
# ===========================================
# Get these from resend.com dashboard
#
# TIP: Use a test API key for staging to avoid sending real emails

RESEND_API_KEY=re_your_api_key
RESEND_WEBHOOK_SECRET=whsec_your_webhook_secret
RESEND_FROM_EMAIL=PeerLens <feedback@yourdomain.com>

# Admin email for notifications
ADMIN_EMAIL=admin@yourdomain.com

# ===========================================
# App Configuration
# ===========================================
# The public URL of your app (no trailing slash)
#
# Local:   http://localhost:3000
# Staging: https://peerlens-staging.vercel.app (or your staging domain)
# Prod:    https://peerlens.app (or your production domain)

NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# Cron Job Security
# ===========================================
# Secret for authenticating cron job requests
# Generate with: openssl rand -base64 32
#
# NOTE: Vercel automatically provides CRON_SECRET for production crons

CRON_SECRET=your-secure-random-string

# ===========================================
# Development Only
# ===========================================
NODE_ENV=development
